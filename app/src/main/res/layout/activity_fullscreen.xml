<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FFFFFF">


    <Button android:id="@+id/cherishMemories"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/button"
        android:background="@drawable/button_ring"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <com.google.android.gms.ads.AdView android:id="@+id/adView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cherishMemories" />

    <com.google.android.gms.ads.AdView android:id="@+id/adView2"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="BANNER"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|bottom" />


</FrameLayout>
